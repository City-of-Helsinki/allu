                        </typeMapping>
                        <typeMapping>
                            <table>decision</table>
                            <column>decision_time</column>
                            <type>java.time.ZonedDateTime</type>
                        </typeMapping>
                        <typeMapping>
                            <table>application_tag</table>
                            <column>creation_time</column>
                            <type>java.time.ZonedDateTime</type>
                        </typeMapping>
                        <typeMapping>
                            <table>application_comment</table>
                            <column>create_time</column>
                            <type>java.time.ZonedDateTime</type>
                        </typeMapping>
                        <typeMapping>
