        <!-- database configuration for source generation: -->
        <database.user>jenkins</database.user>
        <database.db>jenkins</database.db>
        <database.password>sniknej</database.password>
        <database.uri>jdbc:postgresql:///${database.db}</database.uri>
        <flyway.baselineOnMigrate>true</flyway.baselineOnMigrate>
    </properties>

    <dependencies>
        <dependency>
            <groupId>fi.hel.allu</groupId>
            <artifactId>model-domain</artifactId>
            <version>${project.parent.version}</version>
        </dependency>
        <dependency>
            <groupId>fi.hel.allu</groupId>
