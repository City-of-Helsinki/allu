                        </typeMapping>
                        <!-- Map enumeration types -->
                        <!-- NOTE that if you add new kind of typeMapping type, you have to configure it in JdbcConfiguration class! -->
                        <typeMapping>
                            <table>customer</table>
                            <column>type</column>
