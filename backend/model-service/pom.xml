                            <column>period_start_time</column>
                            <type>java.time.ZonedDateTime</type>
                        </typeMapping>
                        <typeMapping>
                            <table>recurring_period</table>
                            <column>period_end_time</column>
                            <type>java.time.ZonedDateTime</type>
                        </typeMapping>
                        <typeMapping>
                            <table>location</table>
                            <column>start_time</column>
                            <type>java.time.ZonedDateTime</type>
                        </typeMapping>
                        <typeMapping>
                            <table>location</table>
                            <column>end_time</column>
                            <type>java.time.ZonedDateTime</type>
                        </typeMapping>
                        <typeMapping>
                            <table>project</table>
                            <column>start_time</column>
                            <type>java.time.ZonedDateTime</type>
                        </typeMapping>
                        <typeMapping>
                            <table>project</table>
                            <column>end_time</column>
                            <type>java.time.ZonedDateTime</type>
                        </typeMapping>
                        <typeMapping>
                            <table>attachment</table>
