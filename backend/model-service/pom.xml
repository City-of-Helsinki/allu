                        </typeMapping>
                        <typeMapping>
                            <table>application_tag</table>
                            <column>type</column>
                            <type>fi.hel.allu.model.querydsl.StringToApplicationTagType</type>
                        </typeMapping>
                        <typeMapping>
                            <table>application_comment</table>
                            <column>type</column>
                            <type>fi.hel.allu.model.querydsl.StringToCommentType</type>
                        </typeMapping>
                        <typeMapping>
                            <table>default_attachment_application_type</table>
                            <column>application_type</column>
                            <type>fi.hel.allu.model.querydsl.StringToApplicationType</type>
                        </typeMapping>
                        <typeMapping>
