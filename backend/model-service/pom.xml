                        </typeMapping>
                        <typeMapping>
                            <table>external_user</table>
                            <column>expiration_time</column>
                            <type>java.time.ZonedDateTime</type>
                        </typeMapping>
                        <typeMapping>
                            <table>external_user</table>
                            <column>last_login</column>
                            <type>java.time.ZonedDateTime</type>
                        </typeMapping>
                        <typeMapping>
                            <table>supervision_task</table>
                            <column>creation_time</column>
                            <type>java.time.ZonedDateTime</type>
                        </typeMapping>
                        <typeMapping>
                            <table>supervision_task</table>
                            <column>planned_finishing_time</column>
