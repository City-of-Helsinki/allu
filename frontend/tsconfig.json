{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "downlevelIteration": true,
    "importHelpers": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2022",
    "module": "ES2022",
    "typeRoots": [
      "node_modules/@types",
      "src/app/typings"
    ],
    "lib": [
      "ES2022",
      "dom"
    ],
    "paths": {
      "@app/*": [
        "app/*"
      ],
      "@feature/*": [
        "app/feature/*"
      ],
      "@model/*": [
        "app/model/*"
      ],
      "@service/*": [
        "app/service/*"
      ],
      "@util/*": [
        "app/util/*"
      ],
      "@test/*": [
        "../test/*"
      ]
    },
    "useDefineForClassFields": false
  },
  "angularCompilerOptions": {
    "preserveWhitespaces": false,
    "fullTemplateTypeCheck": true
  }
}
