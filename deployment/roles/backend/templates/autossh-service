[Unit]
Description=AutoSSH SAP SFTP tunnel
After=network.target

[Service]
Environment="AUTOSSH_GATETIME=0"
ExecStart=/usr/bin/autossh -M 0 -o "ServerAliveInterval 30" -o "ServerAliveCountMax 3" -o StrictHostKeyChecking=no -N -L 8022:{{sap_ftp_invoice_host}}:{{sap_ftp_invoice_port}} allu@{{ ssh_tunnel_server_address | default('NA') }} -i {{ allu_ssh_key_file | default('NA') }}

[Install]
WantedBy=multi-user.target